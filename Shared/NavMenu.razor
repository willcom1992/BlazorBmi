<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">BlazorBmi</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        @*シンプルな表示のメニュー*@
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="simple">
                <span class="oi oi-list-rich" aria-hidden="true"></span> シンプルな表示
            </NavLink>
        </div>
        @*クラスを使った表示のメニュー*@
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="bmi">
                <span class="oi oi-list-rich" aria-hidden="true"></span> クラスを使った例
            </NavLink>
        </div>
        @*パラメータをつかった表示のメニュー*@
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="param">
                <span class="oi oi-list-rich" aria-hidden="true"></span> パラメータ指定
            </NavLink>
        </div>
        @*バインドをつかった表示のメニュー*@
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/bmicalc">
                <span class="oi oi-list-rich" aria-hidden="true"></span>計算する
            </NavLink>
        </div>
        @*子コンポーネントをつかった表示のメニュー*@
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/copyright">
                <span class="oi oi-list-rich" aria-hidden="true"></span>子コンポーネント
            </NavLink>
        </div>
        @*パラメータ付きの子コンポーネントをつかった表示のメニュー*@
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/copyrightparam">
                <span class="oi oi-list-rich" aria-hidden="true"></span>パラメータ付きの子コンポーネント
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
